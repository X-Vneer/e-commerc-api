{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    // important for i18n
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts"]
}
