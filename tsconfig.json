{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    // important for i18n
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
